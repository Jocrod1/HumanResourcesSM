<UserControl x:Class="HumanResourcesSM.Windows.UserInputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResourcesSM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="txtPlaceHolder" Text="{Binding Placeholder}"  Margin="1 4 0 0" Foreground="Gray"/>
        <TextBox x:Name="txt" GotFocus="txt_GotFocus" LostFocus="txt_LostFocus"/>
    </Grid>
</UserControl>
